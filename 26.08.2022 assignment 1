#include<stdio.h>
#include<string.h>
int main()
{
	char str[10];
	gets (str);
	int i,count1=0,count2=0,count3=0;
	for(i=0;str[i]!='\0';i++)
	{
		if(isupper(str[i]))
		{
			count1= count 1 + 1;
			continue;
		}
		if(islower(str[i])){
		
		}
		count 2 + = 1;
		continue;
	}
	if (isdigit(str[i])){
		count3+=1;
	}
}
printf("count of upper case characters:%d\n",count1);
printf("count of lower case characters:%d\n",count2);
printf("count of numbers:%d\n",count3);
return 0;
}
